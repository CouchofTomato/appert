<h1>Test Methods</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Organism</th>
    <th>Method</th>
    <th>Detection Limit</th>
    <th></th>
  </tr>
  <% @test_methods.each do |method| %>
    <tr>
      <td><%= method.name %></td>
      <td><%= method.target_organism %></td>
      <td><%= method.reference_method %></td>
      <td><%= method.detection_limit %> <%= method.unit %></td>
      <td><%= link_to "Edit", edit_test_method_path(method.id) %></td>
    </tr>
  <% end %>
</table>

<div class="row">
  <div class="col-md-2 col-md-offset-1">
    <%= button_to "Add New Method", new_test_method_path, class: 'btn btn-primary', method: :get %>
  </div>
</div>