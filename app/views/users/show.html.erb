<h2 class="is-size-2 has-text-centered"><%= @user.first_name %> <%= @user.last_name %></h2>
<p class='has-text-centered'><%= link_to '(edit profile)', edit_user_registration_path %></p>

<div class="columns">
  <div class="column is-10 is-offset-1">
    <table class="table is-striped is-fullwidth">
      <thead>
        <tr>
          <th>Project ID</th>
          <th>Project Description</th>
          <th>Status</th>
          <th></th>
        </tr>
      </thead>
      <% @projects.each do |proj| %>
        <tr>
          <td><%= proj.id %></td>
          <td><%= proj.description %></td>
          <td><%= proj.status %></td>
          <td>
            <%= button_to "Edit", edit_project_path(proj.id), 
                    method: :get, class: 'button is-info' %>
          </td>
        </tr>
      <% end %>
    </table>
    <%= button_to "New Project", new_project_path, method: :get, 
        class: 'button is-primary' %>
  </div>
</div>