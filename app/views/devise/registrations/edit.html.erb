<div class="columns">
  <div class="column is-4 is-offset-1">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <div class="control">
          <%= f.label :first_name, class: 'label' %>
          <%= f.text_field :first_name, autofocus: true, class: 'input' %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.label :last_name, class: 'label' %>
          <%= f.text_field :last_name, class: 'input' %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.label :email, class: 'label' %>
          <%= f.email_field :email, class: 'input' %>
        </div>
      </div>

      <% if current_user && current_user.admin? %>
        <div class="field">
          <div class="control">
            <%= f.label :company, class: 'label' %>
            <%= f.text_field :company, class: 'input' %>
          </div>
        </div>
      <% end %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <% if current_user && current_user.admin? %>
        <%= f.label :analyst, "Permissions", class: 'label' %>
        <div class="field is-horizontal">
          <div class="control">
            <%= f.label :analyst, class: 'field-label' %>
            <%= f.check_box :analyst, class: 'checkbox', style: 'display: inline-block;' %>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="control">
            <%= f.label :admin, class: 'field-label' %>
            <%= f.check_box :admin, class: 'field-body checkbox', style: 'display: inline-block;' %>
          </div>
        </div>

        <div class="field">
        <%= f.submit "Update", class: 'button is-primary' %>
      </div>
      <% end %>

      <div class="field">      
        <div class="control">
          <%= f.label :current_password, class: 'label' %> <i>(to confirm your changes)</i>
          <%= f.password_field :current_password, autocomplete: "off", class: 'input' %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="column is-4 is-offset-1">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <h2>Change your password</h2>

      <div class="field">      
        <div class="control">
          <%= f.label :password, "New Password", class: 'label' %>
          <%= f.password_field :password, autocomplete: "off", class: 'input' %>
        </div>
      </div>

      <div class="field">      
        <div class="control">
          <%= f.label :password_confirmation, "Confirmation", class: 'label' %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'input' %>
        </div>
      </div>

      <div class="field">
        <%= f.submit "Update", class: 'button is-primary' %>
      </div>
    <% end %>
    <%= link_to "Back", :back %>
  </div>
</div>