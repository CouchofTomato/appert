<h2 class="is-size-2 has-text-centered">Log in</h2>

<div class="columns">
  <div class="column is-one-third is-offset-one-third">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <div class="control">
          <%= f.label :email, class: 'label' %>
          <%= f.email_field :email, autofocus: true, class: 'form-control input' %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.label :password, class: 'label' %>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control input' %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-inline">
          <div class="field">
            <div class="control">
              <%= f.check_box :remember_me, class: 'form-control checkbox' %>
              <%= f.label :remember_me, class: 'inline label' %>
            </div>
          </div>
        </div>
      <% end %>
<br />
      <div class="field">
        <div class="control">
          <%= f.submit "Sign in", class: 'button is-primary form-button' %>
        </div>
      </div>
    <% end %>
<br />
    <%= render "devise/shared/links" %>
  </div>
</div>