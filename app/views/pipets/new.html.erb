<h2 class="is-size-2 has-text-centered">New Pipet</h2>

<div class="columns">
  <div class="column is-half is-offset-one-quarter">
    <%= form_for @pipet do |f| %>
      <div class="field">
        <%= f.label :calibration_date, class: 'label' %>
        <%= f.text_field :calibration_date, class: 'input' %>
      </div>
      <div class="field">
        <%= f.label :calibration_due, class: 'label' %>
        <%= f.text_field :calibration_due, class: 'input' %>
      </div>
      <div class="columns">
        <div class="column is-half">
          <div class="field">
            <%= f.label :min_volume, "Min Volume (μL)", class: 'label' %>
            <%= f.number_field :min_volume, class: 'input' %>
          </div>
        </div>
        <div class="column is-half">
          <div class="field">
            <%= f.label :max_volume, "Max Volume (μL)", class: 'label' %>
            <%= f.number_field :max_volume, class: 'input' %>
          </div>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.check_box :adjustable, class: 'checkbox field-body' %>
          <%= f.label :adjustable, 'Adjustable Volume?', class: 'field-label' %>
        </div>
      </div>
      <div class="control">
        <%= button_to "Submit", new_pipet_path, method: :post, class: 'button is-primary' %>
      </div>
    <% end %>
  </div>
</div>