<div class="container">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for @project do |project| %>
      <% if @project.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

          <ul>
          <% @project.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= project.label :description %>
        <%= project.text_field :description %>

        <%= project.label :lot %>
        <%= project.text_field :lot %>
      </div>

      <div class="form-group">
        <%= project.fields_for :tests do |test| %>
          <%= test.label :test_method_id, "Test Method" %>
          <%= test.select(:test_method_id, options_for_select( TestMethod.all.map { |m| [m.name, m.id] }, selected: test.object.test_method_id), include_blank: true) %>
        <% end %>
      </div>  
      
      <div class="form-group">
        <%= project.hidden_field :user_id, value: current_user.id %>
        <%= project.submit "Submit", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>