<div class="field">
  <div class="control">
    <%= f.label :description, "Sample Description", class: 'label' %>
    <%= f.text_field :description, class: 'input' %>
    <%= f.hidden_field :_destroy %>
    <%= link_to 'remove', '#', class: "destroy_fields" %>
  </div>
</div>

<div class="fields"> <!-- Add More Fields Button Anchor (.fields) -->
  <%= f.fields_for :tests, nil, {remote: true} do |test| %>
    <%= render 'test_fields', :f => test %>
  <% end %>
</div>