<div class="columns">
  <div class="column has-text-centered">
    <h1>Description: <%= @project.description %></h1>
    <h2>Lot: <%= @project.lot %></h2>
    <h2>Customer: <%= @project.user.first_name %><%= @project.user.last_name %></h2>
    <h2>Company: <%= @project.user.company %></h2>
  </div>
</div>

<% if current_user.admin? || current_user.analyst? %>
  <div class="section has-text-centered">
    <table class="table is-striped is-fullwidth">
      <thead>
        <tr>
          <th>Project ID</th>
          <th>Received?</th>
          <th>Started?</th>
          <th>Completed?</th>
          <th>Reported?</th>
          <th>Invoiced?</th>
          <th>Paid?</th>
        </tr>
      </thead>
      <tbody>
        <td><%= @project.id %></td>
        <td><%= @project.received %></td>
        <td><%= @project.started? %></td>
        <td><%= @project.completed %></td>
        <td><%= @project.reported %></td>
        <td><%= @project.invoiced %></td>
        <td><%= @project.paid %></td>
      </tbody>
    </table>
  </div>
<% end %>


<div class="columns">
  <div class="column is-10 is-offset-1">
    <div class="section has-text-centered">
      <table class="table is-striped is-fullwidth">
        <thead>  
          <tr>
            <th>Sample ID</th>
            <th>Description</th>
            <th>Tests</th>
          </tr>
        </thead>
        <tbody>
          <% @project.samples.each do |sample| %>
            <tr>
              <td><%= sample.id %></td>
              <td><%= sample.description %></td>
              <td><%= sample.tests.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="columns">
        <div class="column is-4">
          <%= button_to "Edit Test", edit_project_path(@project), method: :get, class: 'button is-primary' %>
        </div>
        <div class="column is-4 is-fullwidth">
          <%= button_to "All Projects", projects_path, method: :get, class: 'button is-info' %>
        </div>
        <div class="column is-4">
          <%= button_to "Delete Project", @project, method: :delete, data: { confirm: "Are you sure?" }, class: 'button is-danger' %>  
        </div>
      </div>
    </div>
  </div>
</div>